@model ShopOnline.Data.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "UsersOrders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Comenzile Utilizatorului</h2>

<table class="table">
    <thead>
        <tr>
            <th>Număr Comandă</th>
            <th>Email</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Order)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Email</td>
               
            </tr>
        }
    </tbody>
</table>

<h3>Detalii Comandă</h3>

<table class="table">
    <thead>
        <tr>
            <th>Număr Comandă</th>
            <th>Product Id</th>
            <th>Cantitate</th>
            <th>Preț</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var orderDetail in Model.OrderDetails)
        {
            <tr>
                <td>@orderDetail.OrderId</td>
                <td>@orderDetail.ProductId</td>
                <td>@orderDetail.Amount</td>
                <td>@orderDetail.Price</td>
                
            </tr>
        }
    </tbody>
</table>
